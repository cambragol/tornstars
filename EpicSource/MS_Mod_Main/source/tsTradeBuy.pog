OnPurchasePress()
{
   hship player = iShip.FindPlayerShip();
   hsim waypoint;
   hisim pod;
   list player_order = List.FromSet(ordered_set());
   string text, price_string, funds_string;
   int total,i, j, price, pods, number, funds, value, pod_price;
   hcargo cargo;
   hisim trade_center = iSim.Cast(Global.Handle("g_epic_trade_start_object"));

   bool spewer = iHabitat.HasSpewer(iHabitat.Cast(trade_center));
   hship docked_ship;
   int pod_order_size = 0;
   set pods_to_spew;

   // Original (non-spewer) checks

   if (List.IsEmpty(player_order)) {
      return;
   }

   // If the player is too far, refuse sale.
   if (20km < Sim.DistanceBetween(player, trade_center)){
      iHUD.PlayAudioCue(AC_InvalidInput);
      return;
   }


   // Sum up total price of cargo purchased.
   price = 0;
   pods = 0;
   total = List.ItemCount(player_order);
   for (i=0;i<total;++i) {
      cargo = iCargo.Cast(List.GetNth(player_order,i));
      number = Object.IntProperty(cargo,"gt_etrade_amount");
      pods += number;
      pod_price = float2int(price_adjust()* int2float(tsEconomy.CargoPrice(cargo)));
      value = number * pod_price;
      if (tsEconomy.TradedItem(cargo)) {
         value = value - (number * tsEconomy.HaulFee(cargo));
      }

      if (value < 0) {
         value = 0;
      }

      price += value;
   }

   // Check player has the funds. If not, beep and leave this screen up.
   if (price > tsMoney.ShipAccount()) {
      iHUD.PlayAudioCue(AC_InvalidInput);
      return;
   }

   // Spewer Checks. Only do if there is a spewer.
   if(spewer)
   {

   // Find the number of pods to spew
   for(i=0;i<total;++i)
   {
	   cargo = iCargo.Cast(List.GetNth(player_order,i));
	   pods = Object.IntProperty(cargo, "gt_etrade_amount");

	   if(!iCargo.PlayerSystem(cargo))	// Player systems are not spewn, so do not count towards the limit
		   pod_order_size += pods;
   }

   // Check for a valid ship docked
   docked_ship = tsSpewerOps.ShipDocked(iHabitat.Cast(trade_center), true);	// Lock the ship if it's good
   if(pod_order_size > 0 && docked_ship == none)	// It's okay to not have a ship docked if you're just buying a new LDS drive
   {
	   iHUD.Print("YOU MUST DOCK A CARGO SHIP TO BUY GOODS");
	   iHUD.PlayAudioCue(AC_InvalidInput);
	   return;
   }

   // Initialize to allow next check
   tsSpewerOps.Initialize(docked_ship, iHabitat.Cast(trade_center));
   //Check for free cargo ports
   if (pod_order_size > Object.IntProperty(docked_ship, "md_epic_futurefree"))
   {
	   iHUD.Print("INSUFFICENT CARGO ROOM");
	   iHUD.PlayAudioCue(AC_InvalidInput);
	   if(Object.IntProperty(docked_ship, "md_epic_podstogo")<1)	// If it was locked, unlock it (but not if the spewer's still running from a previous sale)
	   {
		   iSim.SetDockingLock(docked_ship, trade_center, false);
		   iHUD.Print("VESSEL UNLOCKED");
	   }
	   return;
   }

   }	// end if(spewer)

   // End checks

   // If the player has the money:
   // Deduct the purchase price.
   tsMoney.ChangeShipAccount(price*-1);

   // Turn the ordered list into cargo pods. 
   // Put them near the station.
   waypoint = Sim.Create("ini:/sims/nav/waypoint","pod_mark");
   Sim.PlaceNear(waypoint, player, 5km);

   total = List.ItemCount(player_order);
   // Instead of placing pods, if there's a spewer, we make a set to spew
   for (i=0;i<total;++i) {
      cargo = iCargo.Cast(List.GetNth(player_order,i));
      pods = Object.IntProperty(cargo,"gt_etrade_amount");
      tsLInventory.ChangeInventory(trade_center, cargo, -1*pods);
      
      if (iCargo.PlayerSystem(cargo)) {
         iInventory.Add(Object.IntProperty(cargo,"type"), pods);
      }else {
         for (j=0;j<pods;++j) {
            pod = iSim.Cast(tsPodUtil.CreateCargoPod(tsEconUtil.CargoType(cargo), "Player", "Player"));
            Sim.SetCullable(pod, false);
			if(spewer)
				Set.Add(pods_to_spew, pod);
			else
				Sim.PlaceNear(pod, waypoint, 1km);
         }
      }
      // Clear the amount for next purchase.
      Object.SetIntProperty(cargo,"gt_etrade_amount",0);
   }

   //Spew
   if(spewer)
   {
	   tsSpewerOps.LoadShip(docked_ship, iHabitat.Cast(trade_center), pods_to_spew);
	   // We used to have to update variables here. tsSpewerOps does this now.
   }


   Sim.Destroy(waypoint);

   clear_set();

   create_ordered_inventory_list();

   update_order_info();

   create_station_inventory_list();


   // We might have a problem, because it takes time for the pods to exist.
   create_player_pod_list();


   // Close the gui screen.
   // UniGUI.UniGUIRemoveScreen();
}



