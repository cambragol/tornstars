// Generate the station trade set filtering out any player systems
// or ammunition.
set generate_trade_set(hisim trade_center)
{
   int station_type;
   set cargo_set;
   list cargo_list;
   int total, i;
   hcargo cargo;

   cargo_list = List.FromSet(tsEconomy.StationProducedCargo(trade_center));

   total = List.ItemCount(cargo_list);
   for (i=0;i<total;++i) {
      cargo = iCargo.Cast(List.GetNth(cargo_list,i));

      if (!(iInventory.IsPieceOfAmmo(Object.IntProperty(cargo,"type"))||iCargo.PlayerSystem(cargo))) {
         Set.Add(cargo_set, cargo);
      }
   }

   return cargo_set;
}

int index_from_name(list item_list, string property, string name)
{
   int total, i;
   hobject item;

   total = List.ItemCount(item_list);
   for (i=0;i<total;++i) {
      item = List.GetNth(item_list,i);
      if (name == Object.StringProperty(item,property)) {
         return i;
      }
   }

   return 0;
}


