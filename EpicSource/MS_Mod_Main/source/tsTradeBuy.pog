{
   Global.CreateFloat("gt_etradebuy_price_adjust", GA_Write|GA_NoSave, adjust);
}



ordered_set_add(hcargo cargo)
{
   set order_set;

   atomic {
      if (Global.Exists("gt_etradebuy_ordered_items")){
         order_set = Global.Set("gt_etradebuy_ordered_items");
         Set.Add(order_set, cargo);
         Global.SetSet("gt_etradebuy_ordered_items", order_set);
      }else {
         Set.Add(order_set, cargo);
         Global.CreateSet("gt_etradebuy_ordered_items",GA_Write|GA_NoSave, order_set);
      }
   }
}


ordered_set_remove(hcargo cargo)
{
   set order_set;
   int count;

   atomic {
      count = Object.IntProperty(cargo,"gt_etrade_amount");
      if (count <= 0) {
         order_set = Global.Set("gt_etradebuy_ordered_items");
         Set.Remove(order_set, cargo);
         Global.SetSet("gt_etradebuy_ordered_items", order_set);
      }
   }
}



